<div class="container" >
  <div class="row" >
    <div class="col-md-4 col-md-offset-4" >
      
      <div class="text-center">
      <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Pro Account sign up for only $10 a month and get access to the Community and contact details.</p>
      <% else %>
          <h1>Basic Account</h1>
          <p>Basic Account sign up for free</p>
      <% end %>
      </div>
      
      <div class="well">
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <h2>Basic Account sign up form</h2>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
